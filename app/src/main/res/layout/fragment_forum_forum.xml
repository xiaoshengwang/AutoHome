<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="@dimen/activity_vertical_margin">
        <ImageView
            android:id="@+id/forum_forum_car"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/forum_forum_car"/>
        <ImageView
            android:id="@+id/forum_forum_acre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/forum_forum_acre"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/forum_forum_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/forum_forum_theme"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车系"
            android:layout_below="@+id/forum_forum_car"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地区"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/forum_forum_car"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="主题"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/forum_forum_car"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/forum_forum_collection"
        android:layout_centerInParent="true"/>
    <TextView
        android:layout_below="@+id/collection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="暂无收藏的论坛"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>